{
  "name": "ultron-frontend",
  "private": true,
  "version": "5.7.0",
  "description": "Ultron Desktop AI Assistant",
  "author": "Aditeya",
  "productName": "ULTRON",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "dist": "vite build && electron-builder"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "react-use-websocket": "^4.5.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.1.3",
    "electron-builder": "^26.0.12",
    "vite": "^5.0.8"
  },
  "main": "electron.cjs",
  "build": {
    "appId": "com.ultron.ai",
    "files": [
      "dist/**/*",
      "electron.cjs",
      "package.json"
    ],
    "icon": "public/icon.jpg",
    "win": {
      "target": "nsis",
      "icon": "public/icon.jpg"
    },
    "extraResources": [
      {
        "from": "../backend/dist/ultron_engine.exe",
        "to": "backend/ultron_engine.exe"
      },
      {
        "from": "../../.env",
        "to": "backend/.env"
      }
    ]
  }
}
